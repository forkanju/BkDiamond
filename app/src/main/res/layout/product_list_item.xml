<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/bk_product" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:maxLines="5"
                        android:text="এস এফ ঘুড়ী \nssjlj  \nsfa"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txt_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:maxLines="1"
                        android:text="বস্তা (২৫ কেজি)"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textColor="@color/list_product_name"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:lineSpacingExtra="2sp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="৫০০ টাকা "
                        android:fontFamily="@font/josefinsans_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_price"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/ic_remove"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_remove"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/product_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="2sp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textColor="@color/selected_product_count"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ic_add"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_add" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>